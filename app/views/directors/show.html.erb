<div>
  <div>
    <h1>
      Director #<%= @director.id %> details
    </h1>

    <div>
      <div>
        <%= link_to "Go back", new_director_path %>
      </div>

      <div>
        <%= link_to "Edit director", edit_director_path( @director ) %>
      </div>

      <div>
        <%= link_to "Delete director", director_path( @director ), :method => "delete" %>
        </div>
    </div>

    <dl>
      <dt>
        Title
      </dt>
      <dd>
        <%= @director.name %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @director.bio %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@director.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@director.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>
